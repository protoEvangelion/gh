    "version": "0.2.0",
    "configurations": [
        {
            "name": "Normal Mode",
            "type": "node",
            "request": "launch",
            "runtimeArgs": ["-r", "ts-node/register"],
            "args": ["${workspaceFolder}/src/debug.ts", "nt", "-u", "gatsbyjs", "-r", "gatsby"],
            "console": "integratedTerminal"
        },
        {
            "name": "Testing Mode",
            "type": "node",
            "request": "launch",
            "env": { "NODE_ENV": "testing", "GH_USER": "protoEvangelion", "GH_TOKEN": "0001" },
            "runtimeArgs": ["-r", "ts-node/register"],
            "args": ["${workspaceFolder}/src/debug.ts", "pr", "--list", "--sort", "complexity"],
            "console": "integratedTerminal"
        }
    ]
}
